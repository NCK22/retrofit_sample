<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_register_parent">

    <LinearLayout
        android:id="@+id/ll_image"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg1">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_overlay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3F2146E">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
            android:background="@drawable/reg_title_border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Email Address"
                android:layout_gravity="center_horizontal"
                android:fontFamily="Roboto-Medium"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="2dp"
                />
        </LinearLayout>




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="A valid e-mail id will be used to send you partner search mailers,
                 \nmember to member communication mailers and special offers."
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="Roboto-Medium"
                android:textSize="20sp"
                android:layout_marginBottom="25dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="30dp"
                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/border">

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Email"
                        android:textColorHint="#FFFFFF"
                        android:background="#00000000"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="Roboto-Regular"
                        android:inputType="textEmailAddress"
                        android:textSize="16dp"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        />

                </LinearLayout>



                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:layout_gravity="center"
                    android:layout_marginTop="34dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="70dp"
                    android:text="Save"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:fontFamily="Roboto-Medium"
                    android:textSize="18dp"
                    android:textColor="#F2146E"
                    android:textAlignment="center"/>







            </LinearLayout>
        </ScrollView>



    </LinearLayout>


</FrameLayout>