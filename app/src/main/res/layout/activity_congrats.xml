<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity"

    android:orientation="vertical"
    android:id="@+id/ll_register_parent">

    <LinearLayout
        android:id="@+id/ll_image"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg1">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_overlay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3F2146E">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="43dp"
                android:layout_marginEnd="43dp"
                android:layout_marginRight="43dp"
                android:layout_marginStart="43dp"
                android:layout_marginBottom="30dp"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="69dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:text="Congratulations !"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="34dp"
                        android:text="You have successfully registered with Deshpande Matrimony"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="Roboto-Regular"
                         android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="33dp"
                    android:layout_gravity="center"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username:"
                        android:layout_gravity="center"
                        android:fontFamily="Roboto-Medium"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:textAlignment="viewEnd" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abcd@xyz.com"
                        android:layout_gravity="center"
                        android:fontFamily="Roboto-Medium"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:lines="1"
                        android:textAlignment="viewStart" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      android:layout_weight="1"
                        android:text="ID:"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="Roboto-Medium"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:textAlignment="viewEnd" />

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I567434"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="Roboto-Medium"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:textAlignment="viewStart" />
                </LinearLayout>



                <TextView
                    android:id="@+id/tv_personal_detl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="20dp"
                    android:text="Fill your personal details >"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center" />

            </LinearLayout>
        </ScrollView>



    </LinearLayout>


</FrameLayout>