<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9"
        android:layout_marginTop="70dp"
        android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_marginBottom="19dp">

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_bride"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Bride"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="16sp"
                    android:textColor="#4A4A4A"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
                <RadioButton
                    android:id="@+id/rb_groom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Groom"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="16sp"
                    android:textColor="#4A4A4A"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Age"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="16sp"
                    android:textColor="#4A4A4A"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_age_from"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border_home_age"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="16sp"
                    android:textColor="#4A4A4A"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="To"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="16sp"
                    android:textColor="#4A4A4A"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/et_age_to"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border_home_age"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="16sp"
                    android:textColor="#4A4A4A"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/home_spinner_border">


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/sp_home_religion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ms_alignLabels="false"
                app:ms_arrowColor="#979797"
                app:ms_arrowSize="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                app:ms_baseColor="#00000000"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_errorColor="#FFFFFF"
                app:ms_typeface="fonts/Roboto-Regular.ttf"
                app:ms_hint="Religion"
                app:ms_hintTextSize="16px"
                app:ms_multiline="false"
                app:ms_thickness="0.5dp"
                android:popupBackground="#e6e6e6"
                android:popupElevation="@dimen/floating_label_bottom_spacing"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/home_spinner_border">


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/sp_home_caste"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ms_alignLabels="false"
                app:ms_arrowColor="#979797"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                app:ms_arrowSize="20dp"
                app:ms_baseColor="#00000000"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_errorColor="#FFFFFF"
                app:ms_hint="Caste"
                app:ms_typeface="fonts/Roboto-Regular.ttf"
                app:ms_hintTextSize="16px"
                app:ms_multiline="false"
                app:ms_thickness="0.5dp"
                android:popupBackground="#e6e6e6"
                android:popupElevation="@dimen/floating_label_bottom_spacing"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">
            <Button

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/home_button_border"
                android:layout_gravity="center"
                android:gravity="center"

                android:text="Find"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="Roboto-Medium"
                android:textSize="18dp"
                android:textColor="#F2146E"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/btn_home_find"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/home_button_border"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Find"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="Roboto-Medium"
                android:textSize="18sp"
                android:textColor="#F2146E" />

            <Button

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/home_button_border"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Find"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="Roboto-Medium"
                android:textSize="18dp"
                android:textColor="#F2146E"
                android:visibility="invisible"/>

        </LinearLayout>
        </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_prof_matches"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/home_spinner_border"
        android:layout_marginTop="50dp">

    </android.support.v7.widget.RecyclerView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_prof_highlight"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/home_spinner_border"
        android:layout_weight="2"
        android:layout_marginTop="50dp">

    </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>