<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="150dp"
>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_marginTop="10dp"
        android:background="#FFFFFF">
        <!--  android:weightSum="9"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp">
<!--        android:layout_weight="5"-->

        <LinearLayout
            android:id="@+id/ll_search_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_marginBottom="19dp">
<!--android:layout_weight="1"-->
            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_bride"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Bride"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="16sp"
                    android:buttonTint="#F2146E"
                    android:autofillHints="#F2146E"
                    android:backgroundTint="#F2146E"
                    android:textColor="#4A4A4A"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
                <RadioButton
                    android:id="@+id/rb_groom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Groom"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="16sp"
                    android:buttonTint="#F2146E"
                    android:textColor="#4A4A4A"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="Age"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="16sp"
                    android:textColor="#4A4A4A"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/et_age_from"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:background="@drawable/border_home_age"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="16sp"
                    android:textColor="#4A4A4A"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:imeActionId="1"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="To"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="16sp"
                    android:textColor="#4A4A4A"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/et_age_to"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:background="@drawable/border_home_age"
                    android:fontFamily="Roboto-Regular"
                    android:textSize="16sp"
                    android:textColor="#4A4A4A"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:imeActionId="2"
                    />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/home_spinner_border">
<!--        android:layout_weight="1"-->

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/sp_home_religion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ms_alignLabels="false"
                app:ms_arrowColor="#979797"
                app:ms_arrowSize="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                app:ms_baseColor="#00000000"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_errorColor="#FFFFFF"
                app:ms_typeface="fonts/Roboto-Regular.ttf"
                app:ms_hint="Religion"
                app:ms_hintTextSize="16dp"
                app:ms_hintColor="#F2146E"
                app:ms_multiline="false"
                app:ms_thickness="0.5dp"
                android:popupBackground="#e6e6e6"
                android:popupElevation="@dimen/floating_label_bottom_spacing"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/home_spinner_border">
<!--android:layout_weight="1"-->

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/sp_home_caste"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ms_alignLabels="false"
                app:ms_arrowColor="#979797"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                app:ms_arrowSize="20dp"
                app:ms_baseColor="#00000000"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_errorColor="#FFFFFF"
                app:ms_hint="Caste"
                app:ms_typeface="fonts/Roboto-Regular.ttf"
                app:ms_hintTextSize="16dp"
                app:ms_hintColor="#F2146E"
                app:ms_multiline="false"
                app:ms_thickness="0.5dp"
                android:popupBackground="#e6e6e6"
                android:popupElevation="@dimen/floating_label_bottom_spacing"
                />
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="19dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:text="Search by ID :"
                android:fontFamily="Roboto-Regular"
                android:textSize="16sp"
                android:textColor="#4A4A4A"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/et_search_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:background="@drawable/border_home_age"
                android:fontFamily="Roboto-Regular"
                android:textSize="16sp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:textColor="#4A4A4A"
                android:layout_gravity="start"
                android:gravity="center"
                android:textStyle="bold"
                android:inputType="text"
                android:imeActionId="3"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="17dp">
            <!-- android:layout_weight="1"-->
            <Button

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/home_button_border"
                android:layout_gravity="center"
                android:gravity="center"

                android:text="Find"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="Roboto-Medium"
                android:textSize="18dp"
                android:textColor="#F2146E"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/btn_home_find"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/home_button_border"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Find"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="Roboto-Medium"
                android:textSize="18sp"
                android:textColor="#F2146E"
               />

            <Button

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/home_button_border"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Find"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="Roboto-Medium"
                android:textSize="18dp"
                android:textColor="#F2146E"
                android:visibility="invisible"/>

        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#19000000">

            <TextView
                android:id="@+id/tv_row_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:gravity="center"
                android:text="Your Profile Matches"
                android:textColor="#323334"
                android:fontFamily="Roboto-Regular"
                android:textSize="18sp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_prof_matches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#00000000">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

<!--   android:layout_weight="2"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="70dp">

            <TextView
                android:id="@+id/tv_row_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:gravity="center"
                android:text="Highlighted Profiles"
                android:textColor="#323334"
                android:fontFamily="Roboto-Regular"
                android:textSize="18sp"
                />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_prof_highlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

    </android.support.v7.widget.RecyclerView>

        <!--    android:layout_weight="2"-->
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>